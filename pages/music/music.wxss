/* pages/music/music.wxss */
::-webkit-scrollbar{
  display: none;
}
page{
  padding: 10rpx;
  box-sizing: border-box;
}
swiper{
  width: 100%;
  border-radius: 15rpx;
  overflow: hidden;
}
swiper image{
  width: 100%;
  height: 100%;
}
.grid-box{
  padding: 20rpx 0;
}
.grid .van-grid-item__text{
  font-size: 24rpx;
}
.title{
  padding-left: 30rpx;
  font-size: 32rpx;
  position: relative;
}
.title::after{
  content: "";
  display: block;
  width: 6rpx;
  height: 30rpx;
  background-color: orangered;
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
}
.hot-box{
  /* height: 300rpx; */
  /* background-color: pink; */
  padding: 15rpx 0;
  border-bottom: 1px solid #f1f1f1;
  display: flex;
  overflow: auto;
}
.hot-box .hot-item{
  width: 200rpx;
  height: 250rpx;
  /* background-color: #cccccc; */
  text-align: center;
  margin-right: 15rpx;

}
.hot-box .hot-item image{
  width: 200rpx;
  height: 200rpx;
}
.hot-box .hot-item .name{
  font-size: 28rpx;
  color: #555555;
}